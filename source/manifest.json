{
	"name": "Noard",
	"version": "0.0.1",
	"description": "Noard is a browser extension that helps folks in Neopix organize their Notion boards in a much cleaner and agile way.",
	"homepage_url": "https://github.com/weareneopix/noard",
	"manifest_version": 2,
	"minimum_chrome_version": "80",
	"browser_specific_settings": {
		"gecko": {
			"id": "awesome-extension@notlmn.github.io",
			"strict_min_version": "80.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"https://www.notion.so/weareneopix/*",
		"storage",
        "tabs",
		"activeTab"
		
	],
	"content_scripts": [
		{
			"matches": [ "https://www.notion.so/weareneopix/*" ],
			"js": [ "content.js" ],
			"css": [ "content.css" ],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"browser_style": true,
		"page": "options.html"
	},
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	}
}
